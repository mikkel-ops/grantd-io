# =============================================================================
# Grantd Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# Environment
ENVIRONMENT=development

# =============================================================================
# Database (PlanetScale)
# =============================================================================
# Get this from PlanetScale dashboard -> Connect -> Python
DATABASE_URL=postgresql://username:password@aws.connect.psdb.cloud/grantd?sslmode=require

# =============================================================================
# AWS Cognito
# =============================================================================
COGNITO_USER_POOL_ID=eu-central-1_xxxxxxxxx
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=eu-central-1

# =============================================================================
# AWS (for Parameter Store, Lambda, etc.)
# =============================================================================
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# Frontend (Vite)
# =============================================================================
VITE_API_URL=http://localhost:8000/api/v1
VITE_COGNITO_USER_POOL_ID=eu-central-1_xxxxxxxxx
VITE_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
